<Window
    x:Class="MusicPlayerWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MusicPlayerWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="MainWindow"
    Width="400"
    Height="650"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style BasedOn="{StaticResource MaterialDesignFlatAccentBgButton}" TargetType="Button">
            <Setter Property="Height" Value="70" />
            <Setter Property="md:ButtonAssist.CornerRadius" Value="40" />
            <Setter Property="Width" Value="70" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </Window.Resources>
    <Border
        x:Name="MainBorder"
        Background="Black"
        CornerRadius="20">
        <Grid>
            <MediaElement
                x:Name="MusicMediaEl"
                Grid.Row="1"
                LoadedBehavior="Manual"
                MediaEnded="MusicMediaEl_MediaEnded"
                MediaOpened="MusicMediaEl_MediaOpened"
                Stretch="Fill"
                UnloadedBehavior="Stop" />
            <Image
                x:Name="MusicBackgroundImage"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="default.png">
                <Image.BitmapEffect>
                    <BlurBitmapEffect Radius="30" />
                </Image.BitmapEffect>
            </Image>
            <Border
                Width="250"
                Height="250"
                Margin="0,100"
                VerticalAlignment="Top"
                CornerRadius="20">
                <Border.Background>
                    <ImageBrush x:Name="MusicMainImage" ImageSource="default.png" />
                </Border.Background>
            </Border>
            <TextBlock
                x:Name="SongNameTxt"
                Margin="30,220"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                FontSize="20"
                FontWeight="DemiBold"
                Foreground="White"
                Text="Song name" />
            <TextBlock
                x:Name="SingerNameTxt"
                Margin="30,200"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Foreground="White"
                Text="Singer" />
            <Slider
                x:Name="MusicMinutSlider"
                Margin="30,170"
                VerticalAlignment="Bottom"
                Thumb.DragCompleted="MusicMinutSlider_DragCompleted"
                Thumb.DragStarted="MusicMinutSlider_DragStarted">
                <Slider.Foreground>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#1b1b1b" />
                        <GradientStop Offset="1" Color="#5d5d5d" />
                    </LinearGradientBrush>
                </Slider.Foreground>
            </Slider>
            <TextBlock
                x:Name="MinuteSpend"
                Margin="30,150"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Foreground="White"
                Text="00:00" />
            <TextBlock
                x:Name="MinuteLeft"
                Margin="30,150"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Foreground="White"
                Text="00:00" />
            <StackPanel
                Margin="0,70"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button x:Name="PreviousButton" Click="PreviousButton_Click">
                    <md:PackIcon
                        Name="SkipPrevious"
                        Width="40"
                        Height="40"
                        Foreground="#cbb9bb"
                        Kind="SkipPrevious" />
                </Button>
                <Button x:Name="PlayButton" Click="PlayButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#030303" />
                            <GradientStop Offset="1" Color="#6b6d6c" />
                        </LinearGradientBrush>
                    </Button.Background>
                    <md:PackIcon
                        x:Name="PlayOrPauseIcon"
                        Width="40"
                        Height="40"
                        Foreground="#fee8eb"
                        Kind="Play" />
                </Button>
                <Button x:Name="NextButton" Click="NextButton_Click">
                    <md:PackIcon
                        Name="SkipNext"
                        Width="40"
                        Height="40"
                        Foreground="#cbb9bb"
                        Kind="SkipNext" />
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
