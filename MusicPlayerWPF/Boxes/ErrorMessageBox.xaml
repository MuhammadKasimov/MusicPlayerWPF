<UserControl
    x:Class="MusicPlayerWPF.Boxes.ErrorMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MusicPlayerWPF.Boxes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="270"
    Height="30"
    Background="Transparent"
    mc:Ignorable="d">
    <Grid>
        <Border Background="#8b8d8c" CornerRadius="10">
            <Border.Effect>
                <BlurEffect Radius="2" />
            </Border.Effect>
        </Border>
        <TextBlock
            x:Name="ErrorText"
            VerticalAlignment="Center"
            FontSize="16"
            Foreground="White"
            Text="Error"
            TextAlignment="Center" />
    </Grid>
</UserControl>
